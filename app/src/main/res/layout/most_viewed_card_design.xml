<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mv_image"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/collegestudy" />

        <TextView
            android:id="@+id/ms_title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/mv_image"
            android:fontFamily="@font/aclonica"
            android:text="College event"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <RatingBar

            android:id="@+id/mv_rating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ms_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/mv_image"


            android:rating="3.4" />

        <TextView
            android:id="@+id/featured_description_1"

            android:layout_width="167dp"
            android:layout_height="80dp"
            android:layout_below="@+id/mv_rating"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"


            android:layout_toRightOf="@+id/mv_image"

            android:text="Sample data Sample data Sample data Sample data Sample dataSample dataSample data" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>