<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.Eventogram" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryVariant">@color/purple_700</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
	</style>
	<style name="Theme.Eventogram.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
	<style name="Theme.Eventogram.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
	<style name="Theme.Eventogram.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
	<style name="expandedBarTextStyle" >
		<!-- Customize your theme here. -->
		<item name="android:textSize">0sp</item>
		<item name="android:textColor">@android:color/transparent</item>

	</style>
	<style name = "navigationTheme" >

		//text color
		<item name="colorPrimary">@color/purple_500</item >

		//background color
		<item name="colorControlHighlight" >#F1E9CE</item >
	</style >


	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar" />


</resources>